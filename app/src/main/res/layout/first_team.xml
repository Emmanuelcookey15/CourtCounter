<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


    <TextView
            android:text="Team A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:id="@+id/tv_first_team"
    />
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/tv_score"
            android:textSize="46sp"
            android:textColor="@android:color/black"
    />

    <Button
            android:text="+3 Point"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/btn1_3"
            android:onClick="changeScoreAByThree"
    />
    <Button
            android:text="+2 Point"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/btn1_2"
            android:onClick="changeScoreAByTwo"
    />
    <Button
            android:text="Free Throw"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/btn1_free"
            android:onClick="changeScoreAByOne"
    />


</LinearLayout>